<project name="javasoftnotification" default="deploy" basedir=".">

  <import file="../../../build/utilities.xml"/>

  <!-- Needed by the utilities.xml. See the description form the utilities.xml
       file -->

  <target name="compile">
    <omj.javac classpath="${compile.result.root}/javalegacyutils/classes/collection"/>
  </target>

  <!-- Needed by the utilities.xml. See the description form the utilities.xml
       file -->

  <property name="javah.classnames" 
            value="com.nokia.mj.impl.dynamicsoftnotification.SoftNotificationImpl"/>

  <target name="system.properties">
    <properties>
        com.nokia.mid.ui.softnotification=true
    </properties>
  </target>

  <target name="create.public.api.jar">
      <omj.public.apis includes="com/nokia/mid/ui/SoftNotificationException.class, 
                                 com/nokia/mid/ui/SoftNotification.class, 
                                 com/nokia/mid/ui/SoftNotificationListener.class"/>
  </target>

</project>
